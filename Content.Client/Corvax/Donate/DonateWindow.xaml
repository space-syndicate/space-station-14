<PanelContainer xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                StyleClasses="AngleRect"
                Margin="0 12 0 0"
                HorizontalAlignment="Left">
    <BoxContainer Orientation="Vertical" SeparationOverride="4" Margin="4">
        <Label Text="{Loc corvax-donate-window-our-label}" HorizontalAlignment="Center" StyleClasses="LabelHeading"/>
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" SeparationOverride="4">
            <Button Name="WikiButton" Text="{Loc corvax-donate-button-wiki}"/>
            <Button Name="DiscordButton" Text="{Loc corvax-donate-button-discord}"/>
        </BoxContainer>
        <controls:HLine Color="#404040" Thickness="2" Margin="0 5"/>
        <Label Text="{Loc corvax-donate-window-support-label}" HorizontalAlignment="Center" StyleClasses="LabelHeading"/>
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" SeparationOverride="4">
            <Button Name="SiteButton" Text="{Loc corvax-donate-button-site}"/>
            <Button Name="BoostyButton" Text="{Loc corvax-donate-button-boosty}"/>
        </BoxContainer>
    </BoxContainer>
</PanelContainer>
